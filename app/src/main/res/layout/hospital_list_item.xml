<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/gray">

    <!-- 병원 대표 사진 -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery" />


    <!-- 병원 이름 -->
    <TextView
        android:id="@+id/hospitalNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:text="병원이름"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 별점 숫자 -->
    <TextView
        android:id="@+id/starScopeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="별점"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/hospitalNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/hospitalNameTextView" />

    <!-- 영업 시간 -->
    <TextView
        android:id="@+id/openingTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="영업시간"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/hospitalNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/starScopeTextView" />

    <!-- 병원 주소 -->
    <TextView
        android:id="@+id/hospitalAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="30dp"
        android:text="병원주소"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/hospitalNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/openingTimeTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>