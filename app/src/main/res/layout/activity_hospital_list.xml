<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HospitalListActivity">

    <!-- 검색창 -->
    <ImageView
        android:id="@+id/backButtonImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back" />

    <EditText
        android:id="@+id/searchEditTextField"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/style_search_view_radius"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="검색어를 입력하세요."
        android:theme="@style/TextView16dpDarkGray"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toStartOf="@+id/searchButtonImageView"
        app:layout_constraintStart_toEndOf="@+id/backButtonImageView"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- 검색 필터 -->
    <ImageView
        android:id="@+id/searchButtonImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backButtonImageView"
        app:srcCompat="@drawable/ic_search" />

    <ImageView
        android:id="@+id/filterImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/backButtonImageView"
        app:layout_constraintTop_toBottomOf="@+id/searchEditTextField"
        app:srcCompat="@drawable/image_filter"
        app:tint="@color/dark_green" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/filterRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/searchButtonImageView"
        app:layout_constraintStart_toEndOf="@+id/filterImageView"
        app:layout_constraintTop_toBottomOf="@+id/searchEditTextField" />

    <!-- 병원 목록 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hospitalListRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/searchButtonImageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/backButtonImageView"
        app:layout_constraintTop_toBottomOf="@+id/filterImageView"
        app:layout_constraintVertical_bias="0" />


</androidx.constraintlayout.widget.ConstraintLayout>